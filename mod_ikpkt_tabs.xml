<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>IKPKT Tabs Module</name>
    <author>Mohamad Zaki Mustafa</author>
    <creationDate>Mac 2015</creationDate>
    <copyright>Copyright (C) 2015 Mzm</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>mohdzaki04@gmail.com</authorEmail>    
    <version>1.0</version>
    <description>Place a Bootstrap tabs in a module position</description>
    <files>
        <filename module="mod_ikpkt_tabs">mod_ikpkt_tabs.php</filename>
        <filename>mod_ikpkt_tabs.xml</filename>
        <filename>index.html</filename>                
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">   
            <fieldset name="basic">  
                                                                                              
                <field type="spacer" name="tabs1" label="&lt;h4&gt;Tab 1&lt;/h4&gt;&lt;hr/&gt;" />		
                <field name="tab1_title" type="text" default="Tab1" label="Tab 1 Text" description="The body text for tab 1"></field>                               
                <field name="tab1_body" label="Tab 1 Body" default="Body1" type="editor" class="span4" rows="5" cols="5" filter="safehtml" />
                
                <field type="spacer" name="tabs2" label="&lt;h4&gt;Tab 2&lt;/h4&gt;&lt;hr/&gt;" />		
                <field name="tab2_title" type="text" default="Tab2" label="Tab 2 Text" description="The body text for tab 2"></field>               
                <field name="tab2_body" label="Tab 2 Body" default="Body2" type="editor" class="span4" rows="5" cols="5" filter="safehtml" />
            </fieldset>
        </fields>
    </config>
</extension>
